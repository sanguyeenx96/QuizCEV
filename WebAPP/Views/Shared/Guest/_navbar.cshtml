<script>
    const Toast = Swal.mixin({
        toast: true,
        position: "top-right",
        showConfirmButton: false,
        timer: 1000,
        timerProgressBar: true,
    });
    function checkRole() {
        $.ajax({
            url: '/Guest/Home/CheckRole',
            method: 'GET',
            success: function (data) {
                if (data.name != null && data.role != null) {
                    $("#btnLoginNew").hide();
                    $("#grgroupBtnLogoutNew").show();
                    if (data.role == "admin") {
                        localStorage.setItem("isAdmin", true);
                        $("#groupBtnLogoutNew").html('<div class="avatar bg-warning">ADM<span class="avatar-status bg-success"></span></div> ' + (data.name || ''));
                        //$("#groupBtnLogoutNew").removeClass('text-white bg-primary');
                        //$("#groupBtnLogoutNew").addClass('text-white bg-danger');
                        $('#btnAdminPage').show();
                    } else if (data.role = "user") {
                        localStorage.setItem("isAdmin", false);
                        $("#groupBtnLogoutNew").html('<div class="avatar text-bg-dark">USR<span class="avatar-status bg-success"></span></div> ' + (data.name || ''));
                        //$("#groupBtnLogoutNew").removeClass('text-white bg-danger');
                        //$("#groupBtnLogoutNew").addClass('text-white bg-primary');
                        $('#btnAdminPage').hide();
                    }
                }
                if (data.name == null && data.role == null) {
                    $("#grgroupBtnLogoutNew").hide();
                    $("#btnLoginNew").show();
                    localStorage.removeItem("isAdmin");
                    localStorage.removeItem("isLoggedIn");
                }
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    $(document).ready(function () {
        $('#btnAdminPage').hide();
        checkRole();
