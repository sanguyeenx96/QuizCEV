<script>
    const Toast = Swal.mixin({
        toast: true,
        position: "top",
        showConfirmButton: false,
        timer: 1000,
        timerProgressBar: true,
    });
    function checkRole() {
        $.ajax({
            url: '/Guest/Home/CheckRole',
            method: 'GET',
            success: function (data) {
                if (data.name != null && data.role != null) {
                    $("#btnLoginNew").hide();
                    $("#groupBtnLogoutNew").show();
                    $("#groupBtnLogoutNew").html('<i class="bi-person-fill"></i> ' + (data.name || ''));
                    if (data.role == "admin") {
                        localStorage.setItem("isAdmin", true);
                    } else if (data.role = "user") {
                        localStorage.setItem("isAdmin", false);
                    }
                }
                if (data.name == null && data.role == null) {
                    $("#btnLoginNew").show();
                    $("#groupBtnLogoutNew").hide();
                    localStorage.removeItem("isAdmin");
                }
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
    $(document).ready(function () {
        checkRole();
    })
    $("#btnLoginNew").click(function () {
        var username, password;
        Swal.fire({
            title: 'Đăng nhập tài khoản',
            html:
                '<form>' +
                '<div class="col-12" style="text-align: center">' +
                '<input style="width: 70%" type="text" id="username" class="swal2-input" placeholder="Tên đăng nhập">' +
                '<input style="width: 70%" type="password" id="password" class="swal2-input" placeholder="Mật khẩu">' +
                '</div>' +
                '</form>',
            showCancelButton: true,
            confirmButtonText: 'Đăng nhập',
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            cancelButtonText: "Huỷ bỏ",

            showLoaderOnConfirm: true,
            preConfirm: () => {
                username = Swal.getPopup().querySelector('#username').value;
                password = Swal.getPopup().querySelector('#password').value;
                if (!username || !password) {
                    Swal.showValidationMessage("Bạn cần nhập đủ tên đăng nhập và mật khẩu!");
                } else {
                    return new Promise(function (resolve, reject) {
                        setTimeout(function () {
                            resolve();
                        }, 1300);
                    });
                }
            },
            allowOutsideClick: () => !Swal.isLoading()

        }).then((result) => {
            if (result.isConfirmed) {
                var data = {
                    UserName: username,
                    Password: password
                };
                $.ajax({
                    type: "POST",
                    url: "/Guest/Home/Login",
                    contentType: "application/json",
                    data: JSON.stringify(data),
                    success: function (result) {
                        if (result.success) {
                            checkRole();                            
                            Toast.fire({
                                icon: "success",
                                title: "Đăng nhập thành công"
                            });
                            localStorage.setItem("isLoggedIn", true);
                        } else {
                            Swal.fire({
                                icon: "error",
                                width: 300,
                                text: result.message,
                                showConfirmButton: false,
                                timer: 2000,
                            });
                        }
                    }
                });
            }
        });
    });
    $("#btnLogoutNew").click(function () {
        Swal.fire({
            title: "Đăng xuất tài khoản?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Xác nhận",
            cancelButtonText: "Huỷ bỏ"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/Guest/Home/Logout", // Đường dẫn đến action
                    method: "POST",
                    success: function (response) {
                        checkRole();                        
                        Toast.fire({
                            icon: "success",
                            title: "Đăng xuất thành công"
                        });
                        localStorage.removeItem("isLoggedIn");
                    },
                    error: function (error) {
                        // Xử lý lỗi nếu có
                        console.error("Error:", error);
                    }
                });
            }
        });
    });

    $("#btnLuongThuong").click(function () {
        const isLoggedIn = localStorage.getItem("isLoggedIn") === "true";
        alert("Chức năng đang hoàn thiện")
    });



    $("#btnTestPageUser").click(function () {
        const isLoggedIn = localStorage.getItem("isLoggedIn") === "true";
        if (isLoggedIn) {
            const isAdmin = localStorage.getItem("isAdmin") === "true";
            if (!isAdmin) {
                var url = "User/Home/SelectRoom";
                window.location.href = url;
            } else {
                
                Toast.fire({
                    icon: "error",
                    title: "không có quyền truy cập"
                });
            }
        } else {
            Toast.fire({
                icon: "error",
                title: "Cần đăng nhập để truy cập"
            });
        }
    });




    $("#btnTestPageAdmin").click(function () {
        const isLoggedIn = localStorage.getItem("isLoggedIn") === "true";
        if (isLoggedIn) {
            const isAdmin = localStorage.getItem("isAdmin") === "true";
            if (isAdmin) {
                var url = "Admin/thongke/Index";
                window.location.href = url;
            } else {
                Toast.fire({
                    icon: "error",
                    title: "không có quyền truy cập"
                });
            }
        } else {
            Toast.fire({
                icon: "error",
                title: "Cần đăng nhập để truy cập"
            });
        }
    });

