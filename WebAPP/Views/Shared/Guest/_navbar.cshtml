                    $('#contentModalTTTK').html(data);
                    $('#staticBackdrop').modal("show")
                },
                error: function (error) {
                    // Xử lý lỗi nếu có
                    console.error(error);
                }
            });
        })

        $("#btnDMK").click(async function () {
            async function Step2() {
                const { value: newMK } = await Swal.fire({
                    currentProgressStep: 1,
                    input: "password",
                    inputLabel: "Nhập mật khẩu mới",
                    inputPlaceholder: "Mật khẩu mới",
                    confirmButtonText: 'Xác nhận',
                });
                if (newMK) {
                    $.ajax({
                        url: '/User/Quanlytaikhoan/UserResetPassword',
                        type: 'POST',
                        data: { newPassword: newMK },
                        success: function (result) {
                            if (result.success) {
                                Swal.fire({
                                    icon: "success",
                                    width: 300,
                                    text: "Đổi mật khẩu thành công",
                                    showConfirmButton: false,
                                    timer: 1000,
                                });
                            } else {
                                Swal.fire({
                                    icon: "error",
                                    width: 300,
                                    text: "Lỗi hệ thống",
                                    showConfirmButton: false,
                                    timer: 1000,
                                });
                            }
                        },
                        error: function (error) {
                            console.error(error);
                        }
                    });
                }
            }
            const steps = ['1', '2']
            const Queue = Swal.mixin({
                progressSteps: steps,
                confirmButtonText: 'Tiếp tục',
                // optional classes to avoid backdrop blinking between steps
                showClass: { backdrop: 'swal2-noanimation' },
                hideClass: { backdrop: 'swal2-noanimation' },
            })
                ; (async () => {
                    const { value: currentMK } = await Queue.fire({
                        currentProgressStep: 0,
                        input: "password",
                        inputLabel: "Nhập mật khẩu hiện tại",
                        inputPlaceholder: "Mật khẩu hiện tại của bạn"
                    });
                    if (currentMK) {
                        $.ajax({
                            url: '/User/Quanlytaikhoan/CheckPassword',
                            type: 'POST',
                            data: { password: currentMK },
                            success: function (result) {
                                if (result.success) {
                                    Step2()
                                }
                                else {
                                    Swal.fire({
                                        icon: "error",
                                        width: 300,
                                        text: "Sai mật khẩu",
                                        showConfirmButton: false,
                                        timer: 1000,
                                    })
                                }
                            },
                            error: function (error) {
                                console.error(error);
                            }
                        });
                    }
                })()
        })
    })
    $("#btnLoginNew").click(function () {
        var username, password;
        Swal.fire({
            title: 'Đăng nhập tài khoản',
            html:
                '<form>' +
                '<div class="col-12" style="text-align: center">' +
                '<input style="width: 70%" type="text" id="username" class="swal2-input" placeholder="Tên đăng nhập">' +
                '<input style="width: 70%;margin-top:5px" type="password" id="password" class="swal2-input" placeholder="Mật khẩu">' +
                '</div>' +
                '</form>',
            showCancelButton: true,
            confirmButtonText: 'Đăng nhập',
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            cancelButtonText: "Huỷ bỏ",
            showLoaderOnConfirm: true,
            preConfirm: () => {
                username = Swal.getPopup().querySelector('#username').value;
                password = Swal.getPopup().querySelector('#password').value;
                if (!username || !password) {
                    Swal.showValidationMessage("Bạn cần nhập đủ tên đăng nhập và mật khẩu!");
                } else {
                    return new Promise(function (resolve, reject) {
                        setTimeout(function () {
                            resolve();
                        }, 1300);
                    });
                }
            },
            allowOutsideClick: () => !Swal.isLoading()
        }).then((result) => {
            if (result.isConfirmed) {
                var data = {
                    UserName: username,
                    Password: password
                };
                $.ajax({
                    type: "POST",
                    url: "/Guest/Home/Login",
                    contentType: "application/json",
                    data: JSON.stringify(data),
                    success: function (result) {
                        if (result.success) {
                            checkRole();
                            Toast.fire({
                                icon: "success",
                                title: "Đăng nhập thành công"
                            });
                            localStorage.setItem("isLoggedIn", true);
                        } else {
                            Swal.fire({
                                icon: "error",
                                width: 300,
                                text: result.message,
                                showConfirmButton: false,
                                timer: 2000,
                            });
                        }
                    },
                    error: function (error) {
                        console.log("loi ket noi")
                        Swal.fire({
                            icon: "error",
                            width: 300,
                            text: "Không kết nối được với máy chủ",
                            showConfirmButton: false,
                            timer: 2000,
                        });
                    }
                });
            }
        });
    });

    $("#btnLogoutNew").click(function () {
        Swal.fire({
            title: "Đăng xuất tài khoản?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Xác nhận",
            cancelButtonText: "Huỷ bỏ"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/Guest/Home/Logout", // Đường dẫn đến action
                    method: "POST",
                    success: function (response) {
                        checkRole();
                        Toast.fire({
                            icon: "success",
                            title: "Đăng xuất thành công"
                        });
                        localStorage.removeItem("isLoggedIn");
                    },
                    error: function (error) {
                        // Xử lý lỗi nếu có
                        console.error("Error:", error);
                    }
                });
            }
        });
    });

