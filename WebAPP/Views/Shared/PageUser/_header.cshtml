<header class="header header-sticky mb-3">
    <div class="container-fluid">
        <button class="header-toggler px-md-0 me-md-3" type="button" onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
            <i class="bi-list"></i>
        </button>
        <ul class="header-nav d-none d-md-flex">
            <li class="nav-item">
                <a class="nav-link active">
                    @ViewBag.hoten -  @ViewBag.bophan
                </a>
            </li>
        </ul>
        <ul class="header-nav ms-auto">
            <li class="nav-item">
            </li>
        </ul>
        <ul class="header-nav ms-3">
            <li class="nav-item">
               @* <a id="btnLogout" class="btn btn-outline-dark">
                    <i class="bi-house-fill"></i>
                    Về trang chủ
                </a>*@
                 <a class="btn btn-light rounded-pill" asp-area="Guest" asp-controller="Home" asp-action="Index">
                    <i class="bi-house-fill"></i>
                    Về trang chủ
                </a>
            </li>
        </ul>
    </div>
    <div class="header-divider"></div>
    <div class="container-fluid" id="containerHeader">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0 ms-2">
                @if (ViewBag.chedothi == "thithu")
                {
                    <li class="breadcrumb-item active">
                        <span class="badge text-bg-light">
                            <i class="bi-mortarboard-fill"></i>
                           Chế độ luyện tập</span>
                    </li>
                }
                <li class="breadcrumb-item active"><span>@ViewBag.thisPage</span></li>
                @if (ViewBag.step1 != null)
                {
                    <li class="breadcrumb-item active"><span>@ViewBag.step1</span></li>
                }
            </ol>
        </nav>
    </div>
</header>

