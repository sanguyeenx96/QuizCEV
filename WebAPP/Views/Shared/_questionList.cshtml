@model IEnumerable<ViewModels.Question.Response.QuestionVm>


<div class="accordion">
    @foreach (var item in Model)
    {
        string speId = "new" + item.Id;
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed btnTitle" type="button" data-coreui-toggle="collapse" data-coreui-target="#@speId" aria-expanded="false">
                    <btn class="btn btn-light btn-sm " style="min-width:80px; margin-right:10px;font-weight: 600">
                        @(item.Score ?? 0)<small> điểm</small>
                    </btn>
                    @item.Text
                </button>
            </h2>
            <div id="@speId" class="accordion-collapse collapse">
                <div class="accordion-body">
                    <div style="text-align:start;margin-bottom:5px">
                        <div class="btn-group" style=" white-space:nowrap;">
                            <btn class="btn btn-secondary  btnSuaDiem" data-abc="@item.CategoryId" data-id="@item.Id" data-this-score="@(item.Score ?? 0) ">
                                <i class="bi-plus-slash-minus"> </i>
                                Sửa điểm
                            </btn>
                            <btn class="btn btn-secondary  btnSuaCauHoi" data-id="@item.Id">
                                <i class="bi-pencil"> </i>
                                Sửa câu hỏi
                            </btn>
                            <btn class="btn btn-danger  btnXoaCauHoiTracNghiem" data-abc="@item.CategoryId" data-id="@item.Id">
                                <i class="bi-trash"> </i>
                                Xoá
                            </btn>
                        </div>
                    </div>
                    <table id="example" class=" table table-dark table-bordered table-hover" style="margin-bottom:auto">
                        <tbody>
                            <tr>
                                <td class="col-sm-2" style="text-align:center">
                                    A :
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QA)
                                </td>
                            </tr>
                            <tr>
                                <td class="col-sm-2" style="text-align:center">
                                    B :
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QB)
                                </td>
                            </tr>
                            <tr>
                                <td class="col-sm-2" style="text-align:center">
                                    C :
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QC)
                                </td>
                            </tr>
                            <tr>
                                <td class="col-sm-2" style="text-align:center">
                                    D :
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QD)
                                </td>
                            </tr>
                            <tr>
                                <td class="col-sm-2" style="text-align:center">
                                    Đáp án :
                                </td>
                                <td>
                                    @(item.QCorrectAns.ToString().ToUpper())
                                </td>
                            </tr>

                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div id="NoiDungCauHoiTracNghiem"></div>
        </div>
    </div>
</div>

<script src="~/javascripts/adminpage/question/_questionlist.js"></script>